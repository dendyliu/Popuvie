<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/review_item"
    android:layout_width="match_parent"
    android:background="#BCAAA4"
    android:padding="16dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/reviewer_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/reviewer"/>
    <TextView
        android:id="@+id/reviewer_name"
        android:layout_toRightOf="@id/reviewer_img"
        android:layout_marginTop="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user"
        android:layout_marginLeft="20dp"
        android:textColor="#263238"
        android:textStyle="bold"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/reviewer_content"
        android:layout_toRightOf="@id/reviewer_img"
        android:paddingTop="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:layout_below="@id/reviewer_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#455A64"
        android:text="adwwadawdawdawdssssssssssssss"/>
</RelativeLayout>